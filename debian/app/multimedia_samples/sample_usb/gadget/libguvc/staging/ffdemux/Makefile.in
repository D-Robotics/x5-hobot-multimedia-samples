CROSS_COMPILE ?= /opt/arm-gnu-toolchain-11.3.rel1-x86_64-aarch64-none-linux-gnu/bin/aarch64-none-linux-gnu-

ifeq ($(BUILD_VERBOSE),1)
	Q =
else
	Q = @
endif

CC = ${CROSS_COMPILE}gcc
CXX = ${CROSS_COMPILE}g++
AR = ${CROSS_COMPILE}ar
AS = ${CROSS_COMPILE}as
LD = ${CROSS_COMPILE}ld

STRIP = ${CROSS_COMPILE}strip
RANLIB = ${CROSS_COMPILE}ranlib
OBJCOPY = ${CROSS_COMPILE}objcopy
OBJDUMP = ${CROSS_COMPILE}objdump
READELF = ${CROSS_COMPILE}readelf
NM = ${CROSS_COMPILE}nm

CFLAGS = -Wall -Werror
CXXFLAGS = -Wall -Werror
CFLAGS_DYNAMIC = -fPIC -shared
CFLAGS_STATIC = -rcs
LDFLAGS =

# Get the absolute path of the directory where Makefile.in is located
CUR_DIR := $(shell dirname $(realpath $(lastword $(MAKEFILE_LIST))))

HR_TOP_DIR = $(shell realpath ${CUR_DIR}/../../../../../../../..)
ifeq ($(HR_BUILD_OUTPUT_DIR),)
HR_BUILD_OUTPUT_DIR = ${HR_TOP_DIR}/out
endif

ifeq ($(APP_DEPLOY_DIR),)
APP_DEPLOY_DIR = ${HR_BUILD_OUTPUT_DIR}/deploy/app
endif

ifeq ($(DEPLOY_SYSTEM_DIR),)
DEPLOY_SYSTEM_DIR = ${HR_BUILD_OUTPUT_DIR}/deploy/system
endif

PLATFORM_SAMPLES_DEPLOY_DIR = ${APP_DEPLOY_DIR}/platform_samples

$(info CUR_DIR directory (absolute): $(CUR_DIR))
$(info HR_TOP_DIR directory (absolute): $(HR_TOP_DIR))
